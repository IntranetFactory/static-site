{
  "source": "./src",
  "destination": "./build",
  "metadata": {
    "site": {
      "name": "Your Site Title Here",
      "description": "A simple static website with Metalsmith & Gulp",   
      "keywords": [
        "Your",
        "Keywords",
        "Here"
      ]
    }
  },
  "assets": {
    "globs" : {
      "vendor": ["./src/js/vendor/*.js"],
      "sass": ["./src/css/*.scss"],
      "scripts": ["./src/js/*.js"],
      "html": ["./src/*.html"]
    },
    "paths":{
      "css": "./src/css",
      "jsbin": "./src/js/bin/"
    }
  },
  "minified": {
    "css": "styles.min.css",
    "js": "scripts.min.js",
    "jsdependencies": "dependencies.min.js",
    "browserify": "bundle.min.js"
  }

}